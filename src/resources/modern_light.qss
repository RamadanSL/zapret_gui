/* 
 * Modern Light - QSS Theme
 */

/* Основные настройки для всех виджетов */
QWidget {
    background-color: #f0f0f0;
    color: #333333;
    font-family: "Inter", sans-serif;
    font-size: 9pt;
}

QMainWindow {
    background-color: #e8e8e8;
    color: #333333;
}

QToolBar {
    background-color: #e0e0e0;
    border: 1px solid #cccccc;
    border-radius: 6px;
    padding: 8px;
    spacing: 4px;
    color: #333333;
}

QToolButton {
    background-color: transparent;
    border: 1px solid transparent;
    border-radius: 4px;
    padding: 8px 12px;
    margin: 2px;
    color: #333333;
    font-weight: 500;
}

QToolButton:hover {
    background-color: #d0d0d0;
    border-color: #b0b0b0;
    color: #333333;
}

QToolButton:checked {
    background-color: #0078d4;
    border-color: #0078d4;
    color: #ffffff;
}

QStackedWidget {
    background-color: #fdfdfd;
    border: 1px solid #cccccc;
    border-radius: 5px;
    color: #333333;
}

QGroupBox {
    background-color: #f7f7f7;
    border: 1px solid #cccccc;
    border-radius: 5px;
    margin-top: 1ex;
    font-weight: bold;
    color: #333333;
}

QGroupBox::title {
    subcontrol-origin: margin;
    subcontrol-position: top center;
    padding: 0 5px;
    background-color: #f7f7f7;
    color: #333333;
    font-weight: bold;
}

QLabel {
    background-color: transparent;
    color: #333333;
}

QLabel[status="success"] {
    color: #28a745;
    font-weight: bold;
}

QLabel[status="error"] {
    color: #dc3545;
    font-weight: bold;
}

QLabel[status="warning"] {
    color: #ffc107;
    font-weight: bold;
}

QLabel[status="info"] {
    color: #17a2b8;
    font-weight: bold;
}

QPushButton {
    background-color: #e0e0e0;
    color: #333333;
    border: 1px solid #cccccc;
    border-radius: 4px;
    padding: 8px 12px;
    min-width: 80px;
}

QPushButton:hover {
    background-color: #d5d5d5;
    border-color: #b5b5b5;
    color: #333333;
}

QPushButton:pressed {
    background-color: #c5c5c5;
    color: #333333;
}

QPushButton:disabled {
    background-color: #dcdcdc;
    color: #a0a0a0;
    border-color: #c0c0c0;
}

QLineEdit, QTextEdit, QComboBox, QSpinBox {
    background-color: #ffffff;
    color: #333333;
    border: 1px solid #cccccc;
    border-radius: 4px;
    padding: 5px;
}

QLineEdit:focus, QTextEdit:focus, QComboBox:focus, QSpinBox:focus {
    border-color: #0078d4;
    color: #333333;
}

QComboBox::drop-down {
    border-left: 1px solid #cccccc;
}

QComboBox::down-arrow {
    image: url(:/icons/down_arrow_light.svg);
}

QComboBox QAbstractItemView {
    background-color: #ffffff;
    color: #333333;
    border: 1px solid #cccccc;
    selection-background-color: #0078d4;
    selection-color: #ffffff;
}

QListWidget {
    background-color: #ffffff;
    border: 1px solid #cccccc;
    border-radius: 4px;
    color: #333333;
}

QListWidget::item {
    color: #333333;
    padding: 4px;
}

QListWidget::item:hover {
    background-color: #e0e0e0;
    color: #333333;
}

QListWidget::item:selected {
    background-color: #0078d4;
    color: #ffffff;
}

QTextEdit {
    background-color: #ffffff;
    color: #333333;
    font-family: 'Consolas', 'Monaco', monospace;
}

QScrollBar:vertical {
    border: 1px solid #cccccc;
    background: #f0f0f0;
    width: 12px;
    margin: 15px 0 15px 0;
}

QScrollBar::handle:vertical {
    background: #c0c0c0;
    min-height: 20px;
    border-radius: 5px;
}

QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
    height: 0px;
}

QScrollBar::add-page:vertical, QScrollBar::sub-page:vertical {
    background: none;
}

QTabWidget::pane {
    border: 1px solid #d0d0d0;
    background-color: #ffffff;
    border-radius: 4px;
    color: #333333;
}

QTabBar::tab {
    background-color: #f0f0f0;
    border: 1px solid #d0d0d0;
    border-bottom: none;
    border-top-left-radius: 4px;
    border-top-right-radius: 4px;
    padding: 8px 16px;
    margin-right: 2px;
    color: #333333;
}

QTabBar::tab:selected {
    background-color: #ffffff;
    border-bottom: 1px solid #ffffff;
    color: #333333;
    font-weight: bold;
}

QTabBar::tab:hover {
    background-color: #e8f0fe;
    color: #333333;
}

QPushButton[type="secondary"] {
    background-color: #f8f9fa;
    border: 1px solid #dadce0;
    color: #333333;
}

QPushButton[type="secondary"]:hover {
    background-color: #e8eaed;
    border-color: #dadce0;
    color: #333333;
}

QPushButton[type="danger"] {
    background-color: #dc3545;
    border-color: #dc3545;
    color: #ffffff;
}

QPushButton[type="danger"]:hover {
    background-color: #c82333;
    border-color: #c82333;
    color: #ffffff;
}

QCheckBox {
    spacing: 8px;
    color: #333333;
}

QCheckBox::indicator {
    width: 16px;
    height: 16px;
    border: 1px solid #dadce0;
    border-radius: 3px;
    background-color: #ffffff;
}

