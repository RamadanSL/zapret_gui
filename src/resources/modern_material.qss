/* Material Progress Bar */
QProgressBar {
    background-color: #f5f5f5;
    border: none;
    border-radius: 8px;
    text-align: center;
    color: #1c1b1f;
    font-weight: 500;
}

QProgressBar::chunk {
    background-color: #1976d2;
    border-radius: 8px;
}

/* Material Splitter */
QSplitter::handle {
    background-color: #e1e1e1;
    border-radius: 1px;
}

QSplitter::handle:horizontal {
    width: 2px;
}

QSplitter::handle:vertical {
    height: 2px;
}

/* Material Dialogs */
QDialog {
    background-color: #ffffff;
}

QMessageBox {
    background-color: #ffffff;
}

QMessageBox QPushButton {
    min-width: 100px;
    min-height: 36px;
}

/* Material Menus */
QMenu {
    background-color: #ffffff;
    border: 1px solid #e1e1e1;
    border-radius: 8px;
    padding: 8px 0px;
}

QMenu::item {
    padding: 12px 24px;
    color: #1c1b1f;
}

QMenu::item:selected {
    background-color: #e3f2fd;
    color: #1976d2;
}

QMenu::separator {
    height: 1px;
    background-color: #e1e1e1;
    margin: 4px 0px;
}

/* Material Status Bar */
QStatusBar {
    background-color: #ffffff;
    color: #1c1b1f;
    border-top: 1px solid #e1e1e1;
}

QStatusBar QLabel {
    color: #1c1b1f;
}

/* Material Tooltips */
QToolTip {
    background-color: #323232;
    color: #ffffff;
    border: none;
    border-radius: 4px;
    padding: 8px 12px;
    font-size: 12px;
}

/* Material Navigation */
QToolBar QLabel {
    color: #666666;
    font-weight: 600;
    margin: 0 16px;
    font-size: 12px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

/* Material Cards with elevation */
QGroupBox[elevation="1"] {
    border: 1px solid #e1e1e1;
}

QGroupBox[elevation="2"] {
    border: 1px solid #d1d1d1;
    background-color: #fafafa;
}

QGroupBox[elevation="3"] {
    border: 1px solid #c1c1c1;
    background-color: #f5f5f5;
}

/* Material FAB (Floating Action Button) */
QPushButton[type="fab"] {
    background-color: #1976d2;
    color: #ffffff;
    border-radius: 28px;
    min-width: 56px;
    min-height: 56px;
    padding: 0px;
    font-size: 24px;
}

QPushButton[type="fab"]:hover {
    background-color: #1565c0;
}

/* Material Chips */
QPushButton[type="chip"] {
    background-color: #e3f2fd;
    color: #1976d2;
    border-radius: 16px;
    padding: 8px 16px;
    min-width: auto;
    min-height: 32px;
    font-size: 12px;
}

QPushButton[type="chip"]:hover {
    background-color: #bbdefb;
} 