/* 
 * Material Design Theme for Zapret Manager
 * Based on Material Design 3 principles
 */

/* Color Palette */
QWidget {
    background-color: #fafafa;
    color: #1c1b1f;
    font-family: "Segoe UI", "Roboto", sans-serif;
    font-size: 14px;
}

QMainWindow {
    background-color: #fafafa;
}

/* Material Toolbar */
QToolBar {
    background-color: #ffffff;
    border: none;
    border-bottom: 1px solid #e1e1e1;
    padding: 8px;
    spacing: 8px;
}

QToolButton {
    background-color: transparent;
    border: none;
    border-radius: 20px;
    padding: 12px 16px;
    margin: 4px;
    color: #1c1b1f;
    font-weight: 500;
    font-size: 14px;
    min-height: 40px;
}

QToolButton:hover {
    background-color: #f3f3f3;
}

QToolButton:checked {
    background-color: #e8f0fe;
    color: #1976d2;
}

/* Material Cards (GroupBox) */
QGroupBox {
    background-color: #ffffff;
    border: 1px solid #e1e1e1;
    border-radius: 12px;
    margin-top: 16px;
    padding-top: 16px;
    font-weight: 600;
    font-size: 16px;
    color: #1c1b1f;
}

QGroupBox::title {
    subcontrol-origin: margin;
    subcontrol-position: top left;
    padding: 0 12px;
    background-color: #ffffff;
    color: #1c1b1f;
    font-weight: 600;
}

/* Material Buttons */
QPushButton {
    background-color: #1976d2;
    color: #ffffff;
    border: none;
    border-radius: 20px;
    padding: 12px 24px;
    font-weight: 500;
    font-size: 14px;
    min-height: 40px;
    min-width: 120px;
}

QPushButton:hover {
    background-color: #1565c0;
}

QPushButton:pressed {
    background-color: #0d47a1;
}

QPushButton:disabled {
    background-color: #e0e0e0;
    color: #9e9e9e;
}

/* Secondary Button */
QPushButton[type="secondary"] {
    background-color: transparent;
    color: #1976d2;
    border: 1px solid #1976d2;
}

QPushButton[type="secondary"]:hover {
    background-color: #e3f2fd;
}

/* Danger Button */
QPushButton[type="danger"] {
    background-color: #d32f2f;
}

QPushButton[type="danger"]:hover {
    background-color: #c62828;
}

/* Success Button */
QPushButton[type="success"] {
    background-color: #388e3c;
}

QPushButton[type="success"]:hover {
    background-color: #2e7d32;
}

/* Material Input Fields */
QLineEdit, QTextEdit, QComboBox, QSpinBox {
    background-color: #ffffff;
    border: 1px solid #e1e1e1;
    border-radius: 8px;
    padding: 12px 16px;
    font-size: 14px;
    min-height: 20px;
}

QLineEdit:focus, QTextEdit:focus, QComboBox:focus, QSpinBox:focus {
    border-color: #1976d2;
    border-width: 2px;
}

QComboBox::drop-down {
    border: none;
    width: 20px;
}

QComboBox::down-arrow {
    image: none;
    border-left: 5px solid transparent;
    border-right: 5px solid transparent;
    border-top: 5px solid #666666;
    margin-right: 8px;
}

/* Material Lists */
QListWidget {
    background-color: #ffffff;
    border: 1px solid #e1e1e1;
    border-radius: 8px;
    padding: 8px;
}

QListWidget::item {
    padding: 12px;
    border-radius: 8px;
    margin: 2px;
}

QListWidget::item:hover {
    background-color: #f5f5f5;
}

QListWidget::item:selected {
    background-color: #e3f2fd;
    color: #1976d2;
}

/* Material Tabs */
QTabWidget::pane {
    border: 1px solid #e1e1e1;
    border-radius: 12px;
    background-color: #ffffff;
    margin-top: 8px;
}

QTabBar::tab {
    background-color: transparent;
    border: none;
    border-bottom: 2px solid transparent;
    padding: 12px 24px;
    margin-right: 4px;
    color: #666666;
    font-weight: 500;
}

QTabBar::tab:selected {
    color: #1976d2;
    border-bottom-color: #1976d2;
}

QTabBar::tab:hover {
    background-color: #f5f5f5;
    border-radius: 8px 8px 0 0;
}

/* Material Labels */
QLabel {
    background-color: transparent;
    color: #1c1b1f;
    padding: 4px;
}

QLabel[status="success"] {
    color: #388e3c;
    font-weight: 600;
}

QLabel[status="error"] {
    color: #d32f2f;
    font-weight: 600;
}

QLabel[status="warning"] {
    color: #f57c00;
    font-weight: 600;
}

QLabel[status="info"] {
    color: #1976d2;
    font-weight: 600;
}

/* Material Scrollbars */
QScrollBar:vertical {
    background-color: #f5f5f5;
    width: 12px;
    border-radius: 6px;
    margin: 0;
}

QScrollBar::handle:vertical {
    background-color: #c1c1c1;
    border-radius: 6px;
    min-height: 20px;
}

QScrollBar::handle:vertical:hover {
    background-color: #a8a8a8;
}

QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
    height: 0px;
}

QScrollBar::add-page:vertical, QScrollBar::sub-page:vertical {
    background: none;
}

/* Material Checkboxes */
QCheckBox {
    spacing: 12px;
    color: #1c1b1f;
}

QCheckBox::indicator {
    width: 20px;
    height: 20px;
    border: 2px solid #666666;
    border-radius: 4px;
    background-color: #ffffff;
